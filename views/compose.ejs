<%- include("partials/header") -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input class="form-control" type="text" name="postTitle"></input>
  </div>
  <div class="form-group">
    <label for="postBody">Post</label>
    <textarea class="form-control" name="postBody" rows="5"></textarea>
  </div>
  <button class="btn btn-lg btn-primary" type="submit" name="publish">Publish</button>
</form>
<%- include("partials/footer") -%>
